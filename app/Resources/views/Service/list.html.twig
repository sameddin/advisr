{% extends '::layout.html.twig' %}
{% block content %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">{{ 'homepage'|trans }}</a></li>
        <li class="active">{{ 'service.list'|trans }}</li>
    </ol>

    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-filter"></i> {{ 'service.filter'|trans }}
                </div>
                <div class="panel-body">
                    {{ form(filterForm) }}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            {% for service in pagination %}
                {{ include(':Service:single.html.twig') }}
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
