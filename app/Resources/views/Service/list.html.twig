{% extends '::layout.html.twig' %}
{% block content %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">{{ 'homepage'|trans }}</a></li>
        <li class="active">{{ 'service.list'|trans }}</li>
    </ol>

    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'service.filter'|trans }}</div>
                <div class="panel-body">
                    {{ form(filterForm) }}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            {% for service in pagination %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{ service.title }}
                    </div>
                    <div class="panel-body">
                        {% for location in service.locations %}
                            <dl class="dl-horizontal">
                                <dt>{{ 'service.location'|trans }}</dt>
                                <dd>{{ location.name }}</dd>
                            </dl>
                        {% endfor %}
                        <dl class="dl-horizontal">
                            <dt>{{ 'service.category'|trans }}</dt>
                            <dd>{{ service.category.name }}</dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>{{ 'service.description'|trans }}</dt>
                            <dd>{{ service.description }}</dd>
                        </dl>
                    </div>
                </div>
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
