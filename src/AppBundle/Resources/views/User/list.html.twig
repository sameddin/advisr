{% extends 'layout.html.twig' %}

{% block content %}

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
        </thead>
        {% for advice in users %}
            <tr>
                <td>{{ advice.id }}</td>
                <td>{{ advice.firstName }}</td>
                <td>{{ advice.lastName }}</td>
                <td>{{ advice.email }}</td>
                <td>{{ advice.password }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}

